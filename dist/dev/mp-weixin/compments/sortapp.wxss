.chat-custom-right {
  flex: 1;

  display: flex;

  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.ui-list-item {
  width: 100%;
  height: 180rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.ui-list-item .ui-list-item-left {
  width: 30rpx !important;
  height: 100%;
  text-align: center;
  position: relative;
  padding: 0rpx;
}
.ui-list-item .ui-list-item-left .list-sort {
  font-size: 30rpx;
  color: #999;
  width: 100%;
  position: relative;
  top: 40%;
}
.ui-list-item .appicon {
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 135rpx !important;
  height: 135rpx;
  flex-grow: 0rpx;
  flex-shrink: 0rpx;
  border-radius: 20rpx;
}
.ui-list-item .right-content {
  flex: 1;
  height: 135rpx;
  display: flex;
  flex-direction: column;
}
.ui-list-item .right-content .list-title {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}
.ui-list-item .right-content .list-note {
  width: 100%;
  font-size: 25rpx;
  color: #999;
  position: relative;
  top: 13rpx;
}
.ui-list-item .right-content .list-bottom-icon {
  position: relative;
  top: 20rpx;
  display: block;
  padding: 0rpx;
}
.ui-list-item .right-content .icons {
  display: inline-block;
}
.ui-list-item .right-content .list-number {
  width: 100%;
  font-size: 25rpx;
  color: #ccc;
  margin-left: 10rpx;
}